    <EditText
        android:id="@+id/edtLength"
        android:inputType="number"
        android:background="@drawable/edtbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="50sp"
        android:layout_marginRight="30sp"
        android:hint="Length of Password"
        android:textSize="22sp"
        android:textColorHint="#FFFFFF"
        android:textColor="#756D6D"
        android:padding="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/upper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uppercase"
        android:textColor="#FFDD00"
        android:textSize="20sp"
        android:layout_margin="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLength" />

    <CheckBox
        android:id="@+id/lower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lowercase"
        android:textColor="#FFDD00"
        android:textSize="20sp"
        android:layout_margin="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLength" />

    <CheckBox
        android:id="@+id/digits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:text="Digits"
        android:textColor="#FFDD00"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upper" />

    <CheckBox
        android:id="@+id/symbols"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:text="Symbols"
        android:textColor="#FFDD00"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lower" />

    <Button
        android:id="@+id/pssbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:background="@drawable/buttonbg"
        android:padding="9sp"
        android:text="Generate Password"
        android:textSize="23sp"
        android:layout_marginTop="140sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/myPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/passbg"
        android:foregroundGravity="center"
        android:paddingRight="30sp"
        android:paddingLeft="30sp"
        android:layout_marginBottom="110sp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:gravity="center"
        android:text="Your Password"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLength" />

    <ImageView
        android:id="@+id/creadits"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/ic_info2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>